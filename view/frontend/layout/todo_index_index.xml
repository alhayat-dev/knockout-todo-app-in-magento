                                                    <item name="completed_tasks" xsi:type="string">6</item>
                                                    <item name="total_tasks" xsi:type="string">9</item>
                                                </item>
                                                <item name="3" xsi:type="array">
                                                    <item name="id" xsi:type="number">4</item>
                                                    <item name="title" xsi:type="string">Deployments</item>
                                                    <item name="description" xsi:type="string">Perform scheduled deployment on production.</item>
                                                    <item name="start_date" xsi:type="string">18 Mar</item>
                                                    <item name="end_date" xsi:type="string">26 Mar</item>
                                                    <item name="completed_tasks" xsi:type="string">7</item>
                                                    <item name="total_tasks" xsi:type="string">18</item>
                                                </item>
                                            </item>
                                        </item>
                                    </item>
                                </item>
                            </item>
                        </item>
                    </argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>
